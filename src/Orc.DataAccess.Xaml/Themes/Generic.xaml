<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Orc.DataAccess.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Orc.DataAccess.Xaml;component/Themes/Styles.xaml" />

        <ResourceDictionary Source="../Controls/ConnectionStringBuilder/Themes/ConnectionStringBuilder.generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="DefaultConnectionStringBuilderStyle" TargetType="{x:Type controls:ConnectionStringBuilder}"
           BasedOn="{StaticResource {x:Type controls:ConnectionStringBuilder}}">
        <Setter Property="MinHeight" Value="{DynamicResource Size.MinHeight}" />
        <Setter Property="Margin" Value="{DynamicResource Margin.TextBox}" />
        <Setter Property="Height" Value="{DynamicResource Size.Height}" />
    </Style>

</ResourceDictionary>